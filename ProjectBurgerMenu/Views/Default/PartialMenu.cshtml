@model List<ProjectBurgerMenu.Entities.Product>
@{
    int count = 0;
}
<section class="site-section" id="section-menu">
    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center mb-5 site-animate">
                <h2 class="display-4">Lezzetli Menülerimiz</h2>
                <div class="row justify-content-center">
                    <div class="col-md-7">
                        <p class="lead">Lezzet dolu ürünlerimizle tanışın ve her damak zevkine hitap eden enfes seçeneklerin keyfini çıkarın! Geleneksel Türk mutfağından dünya lezzetlerine, her biri özenle hazırlanan ürünlerimizle sofralarınıza lezzet katmak için buradayız.</p>
                    </div>
                </div>
            </div>

            <div class="col-md-12 text-center">

                @Html.Action("PartialMenuCategory", "Default")

                <div class="tab-content text-left">
                    <div class="tab-pane fade show active" id="pills-breakfast" role="tabpanel" aria-labelledby="pills-breakfast-tab">
                        <div class="row">

                            @foreach (var item in Model)
                            {
                                count++;
                                if (count % 2 == 1)
                                {
                                    <div class="col-md-6 site-animate">

                                        <div class="media menu-item">
                                            <img class="mr-3" src="@item.ImageUrl" class="img-fluid" alt="Free Template by colorlib.com">
                                            <div class="media-body">
                                                <h5 class="mt-0">@item.ProductName</h5>
                                                <p>@item.Description</p>
                                                <h6 class="text-primary menu-price">@item.Price TL</h6>
                                            </div>
                                        </div>

                                    </div>
                                }
                                else
                                {
                                    <div class="col-md-6 site-animate">

                                        <div class="media menu-item">
                                            <img class="mr-3" src="@item.ImageUrl" class="img-fluid" alt="Free Template by colorlib.com">
                                            <div class="media-body">
                                                <h5 class="mt-0">@item.ProductName</h5>
                                                <p>@item.Description</p>
                                                <h6 class="text-primary menu-price">@item.Price TL</h6>
                                            </div>
                                        </div>


                                    </div>
                                }



                            }
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</section>
