@model List<ProjectBurgerMenu.Entities.Gallery>
<section class="site-section" id="section-gallery">
    <div class="container">
        <div class="row site-custom-gutters">

            <div class="col-md-12 text-center mb-5 site-animate">
                <h2 class="display-4">Galerimiz</h2>
                <div class="row justify-content-center">
                    <div class="col-md-7">
                        <p class="lead"> Lezzetli tariflerle dolu bu galeride, hem gözlerinizi hem de damaklarınızı şenlendirecek yemeklerin özenle hazırlanmış görsellerini bulabilirsiniz. Dünya mutfağından yerel lezzetlere, hafif atıştırmalıklardan doyurucu ana yemeklere kadar geniş bir yelpazede sunulan yemekler, şeflerimizin yaratıcı dokunuşlarıyla hazırlandı. </p>
                    </div>
                </div>
            </div>
            @foreach (var item in Model)
            {


            <div class="col-md-4 site-animate">
                <a href="@item.ImageUrl" class="site-thumbnail image-popup">
                    <img src="@item.ImageUrl2" alt="Free Template by colorlib.com" class="img-fluid">
                </a>
            </div>

            }
        </div>
    </div>
</section>
