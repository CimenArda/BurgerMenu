@model ProjectBurgerMenu.Entities.Product

@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h2>Ürün Güncelleme Sayfası</h2>
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <form method="post">
                @Html.HiddenFor(x=>x.ProductId)
                <label>Ürün Adı</label>
                @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                <br />
                <label>Ürün Görseli</label>
                @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                <br />
                <label>Ürün Fiyatı</label>
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
                <br />
                <label>Ürün Kategorisi</label>
                @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.v, "Kategori Seç", new { @class = "form-control" })
                <br />
                <label>Ürün Açıklaması</label>
                @Html.TextAreaFor(x => x.Description, 4, 0, new { @class = "form-control" })
                <br />

                <button class="btn btn-info">Ürünü Güncelle</button>

            </form>
        </div>
    </div>
</div>
