@model List<ProjectBurgerMenu.Entities.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">
                Kategori İşlemleri <code>Bu Alanda Yapılır</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Kategori Numarası</th>
                            <th>Kategori Adı</th>
                            <th></th>
                            <th>Silme İşlemi</th>
                            <th>Güncelleme İşlemi</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.CategoryId</td>
                                <td>@item.CategoryName</td>
                                <td><a href="#" class="btn btn-outline-warning">Kategori Ürünleri</a></td>
                                <td><a href="#" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="#" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="#" class="btn btn-primary">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>
