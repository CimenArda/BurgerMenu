@model List<ProjectBurgerMenu.Entities.Reservation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Listesi</h4>
            <p class="card-description">
                Rezervasyon İşlemleri <code>Bu Alanda Yapılır</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Rezervasyon Numarası</th>
                            <th>Ad-Soyad</th>
                            <th>Telefon</th>
                            <th>Kişi Sayısı</th>
                            <th>Rezervasyon Tarihi</th>
                            <th>Rezervasyon Durumu</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.ReservationId</td>
                                <td>@item.Name @item.Surname</td>
                                <td>@item.Phone</td>
                                <td>@item.PersonCount</td>
                                <td>@item.ReservationDate-@item.Time</td>
                                <td>@item.ReservationStatus</td>
                                <td> <a href="/Admin/Reservation/HoldReservation/@item.ReservationId" class="btn btn-primary">Beklet</a> </td>
                                <td> <a href="/Admin/Reservation/ConfirmReservation/@item.ReservationId" class="btn btn-info">Onayla</a> </td>
                                <td> <a href="/Admin/Reservation/CancelReservation/@item.ReservationId" class="btn btn-danger">İptal Et</a> </td>
                                <td> <a href="/Admin/Reservation/CompletedSuccessfullyReservation/@item.ReservationId" class="btn btn-success"> Başarıyla Tamamlandı</a> </td>


                            </tr>
                        }
                    </tbody>
                </table>
                <a href="#" class="btn btn-primary">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>
