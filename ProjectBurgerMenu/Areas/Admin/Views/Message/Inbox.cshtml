@model List<ProjectBurgerMenu.Entities.Message>
@{
    ViewBag.Title = "Inbox";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";

 
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Listesi</h4>
            <p class="card-description">
                Mesaj İşlemleri <code>Bu Alanda Yapılır</code>
            </p>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Mesaj Numarası</th>
                            <th>Gönderici</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Mesajı Aç</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {


                            <tr>
                                <td>@item.MessageID</td>
                                <td>@item.SenderEmail</td>
                                <td>@item.Title</td>
                                <td>@item.SendDate.ToShortDateString()</td>
                                <td><a href="#" class="btn btn-outline-warning">Mesajı Aç</a></td>
                           
                            </tr>
                        }
                    </tbody>
                </table>
                <a href="#" class="btn btn-primary">Yeni Mesaj Girişi</a>
            </div>
        </div>
    </div>
</div>

